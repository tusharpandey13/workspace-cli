{
  "name": "@tusharpandey13/space-cli",
  "version": "0.1.0",
  "description": "Stack-agnostic CLI tool to automate multi-worktree development workflows for any codebase.",
  "preferGlobal": true,
  "bin": {
    "space": "space-wrapper.sh"
  },
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/bin/workspace.js && chmod +x space-wrapper.sh",
    "build:dev": "tsc -p tsconfig.dev.json && chmod +x dist/bin/workspace.js && chmod +x space-wrapper.sh",
    "dev": "tsx src/bin/workspace.ts --help",
    "start": "node dist/bin/workspace.js --help",
    "test": "env NODE_OPTIONS=\"\" SKIP_PERFORMANCE_TESTS=true vitest --run",
    "test:coverage": "env NODE_OPTIONS=\"\" SKIP_PERFORMANCE_TESTS=true vitest --coverage --run",
    "test:performance": "env NODE_OPTIONS=\"\" vitest --run test/performance/",
    "test:all": "env NODE_OPTIONS=\"\" vitest --run",
    "test:e2e": "bash e2e/test-suite.sh",
    "test:install": "pnpm run test:install:local && pnpm run test:install:global",
    "test:install:local": "node dist/bin/workspace.js --version",
    "test:install:global": "space --version",
    "troubleshoot": "scripts/troubleshoot.sh",
    "lint": "eslint . --ext .ts --ext .js || true",
    "lint:fix": "eslint . --ext .ts --ext .js --fix",
    "format": "prettier --write \"**/*.{ts,js,md,json}\"",
    "prepare": "husky install",
    "clean": "rm -rf dist",
    "install-global": "pnpm run build && npm config set prefix ~/.npm-global && npm install -g . && pnpm run test:install",
    "install-global:dev": "pnpm run build:dev && npm config set prefix ~/.npm-global && npm install -g . && pnpm run test:install",
    "uninstall-global": "npm config set prefix ~/.npm-global && npm uninstall -g @tusharpandey13/space-cli 2>/dev/null || true",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cli",
    "workspace",
    "worktree",
    "development",
    "git",
    "stack-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "cli-progress": "^3.12.0",
    "commander": "^11.0.0",
    "dotenv": "^16.4.5",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "ora": "^9.0.0",
    "p-limit": "^7.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.17",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9"
  },
  "lint-staged": {
    "*.{ts,js,md,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  }
}
