#!/usr/bin/env sh

# Run lint-staged first
pnpm lint-staged

# Additional checks for global installation consistency
echo "üîç Checking for potential global installation issues..."

# Check if there's a global installation
if command -v space >/dev/null 2>&1; then
    # Get current package.json version
    PACKAGE_VERSION=$(node -pe "require('./package.json').version")
    
    # Get global version (if available)
    GLOBAL_VERSION=$(space --version 2>/dev/null || echo "unknown")
    
    if [ "$PACKAGE_VERSION" != "$GLOBAL_VERSION" ]; then
        echo "‚ö†Ô∏è  WARNING: Global installation version mismatch detected!"
        echo "   Package.json version: $PACKAGE_VERSION"
        echo "   Global version: $GLOBAL_VERSION"
        echo ""
        echo "üí° To fix this after commit, run:"
        echo "   pnpm run install-global:safe"
        echo ""
        echo "   This ensures your global installation stays in sync."
    else
        echo "‚úÖ Global installation version is consistent"
    fi
else
    echo "‚ÑπÔ∏è  No global installation detected"
fi

echo "‚úÖ Pre-commit checks completed"
